# DOMINAUTS ENVIRONMENT CONFIGURATION
# Copy this file to .env.local for development
# Add these to Vercel/Netlify environment variables for production

# ==================================
# SUPABASE CONFIGURATION (PRIMARY DB)
# ==================================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_for_server_only

# ==================================
# FIREBASE CONFIGURATION (OPTIONAL - For Auth/Realtime)
# ==================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ==================================
# STRIPE CONFIGURATION
# ==================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stripe Product IDs
STRIPE_PRODUCT_COINS_100=prod_xxxxxxxxxxxxx
STRIPE_PRODUCT_COINS_500=prod_xxxxxxxxxxxxx
STRIPE_PRODUCT_COINS_1000=prod_xxxxxxxxxxxxx
STRIPE_PRODUCT_PREMIUM_MONTHLY=prod_xxxxxxxxxxxxx
STRIPE_PRODUCT_PREMIUM_YEARLY=prod_xxxxxxxxxxxxx
STRIPE_PRODUCT_REMOVE_ADS=prod_xxxxxxxxxxxxx

# Stripe Price IDs
STRIPE_PRICE_COINS_100=price_xxxxxxxxxxxxx
STRIPE_PRICE_COINS_500=price_xxxxxxxxxxxxx
STRIPE_PRICE_COINS_1000=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_YEARLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_REMOVE_ADS=price_xxxxxxxxxxxxx

# ==================================
# ANALYTICS & MONITORING
# ==================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx
VITE_MIXPANEL_TOKEN=xxxxxxxxxxxxx

# ==================================
# API CONFIGURATION
# ==================================
VITE_API_BASE_URL=https://api.dominauts.com
VITE_WEBSOCKET_URL=wss://ws.dominauts.com
API_SECRET_KEY=your_api_secret_key

# ==================================
# SOCIAL AUTH PROVIDERS
# ==================================
GOOGLE_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxx
FACEBOOK_APP_ID=xxxxxxxxxxxxx
FACEBOOK_APP_SECRET=xxxxxxxxxxxxx
APPLE_CLIENT_ID=com.dominauts.app
APPLE_TEAM_ID=XXXXXXXXXX

# ==================================
# DEPLOYMENT CONFIGURATION
# ==================================
NODE_ENV=production
VITE_APP_URL=https://dominauts.com
VITE_APP_NAME=Dominauts
VITE_APP_VERSION=2.0.0

# ==================================
# FEATURE FLAGS
# ==================================
VITE_ENABLE_MULTIPLAYER=true
VITE_ENABLE_TOURNAMENTS=true
VITE_ENABLE_ADS=true
VITE_ENABLE_IAP=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# ==================================
# GAME CONFIGURATION
# ==================================
VITE_MAX_PLAYERS=4
VITE_DEFAULT_GAME_MODE=allfives
VITE_ENABLE_AI=true
VITE_ENABLE_HINTS=true

# ==================================
# EMAIL SERVICE (RESEND)
# ==================================
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=support@dominauts.com
RESEND_ADMIN_EMAIL=admin@dominauts.com

# ==================================
# ADMIN CONFIGURATION
# ==================================
ADMIN_URL=https://admin.dominauts.com
ADMIN_SECRET_KEY=admin_secret_key_minimum_32_chars

# ==================================
# SECURITY
# ==================================
JWT_SECRET=your_jwt_secret_key_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key
CORS_ALLOWED_ORIGINS=https://dominauts.com,https://www.dominauts.com

# ==================================
# RATE LIMITING
# ==================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==================================
# CACHE CONFIGURATION
# ==================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600